<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- General confirmation (OK) buttons in UI -->
    <Style x:Key="ConfirmationButton" BasedOn="{StaticResource MahApps.Styles.Button}" TargetType="Button">
        <Setter Property="Width" Value="70" />
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Content" Value="OK"/>
        <Setter Property="IsDefault" Value="True"/>
    </Style>

    <!-- General cancellation (Cancel) buttons in UI -->
    <Style x:Key="CancellationButton" BasedOn="{StaticResource MahApps.Styles.Button}" TargetType="Button">
        <Setter Property="Width" Value="70" />
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Content" Value="Cancel"/>
        <Setter Property="IsCancel" Value="True"/>
    </Style>

    <!-- Radiobutton operating as a toggle button -->
    <Style x:Key="RadioAsToggle" BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="RadioButton">
        <Style.Setters>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="ToolTipService.InitialShowDelay" Value="500"/>
        </Style.Setters>
    </Style>

</ResourceDictionary>